# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
# Replace with your PostgreSQL connection string
DATABASE_URL="postgresql://user:password@host:5432/database"

# Server Configuration
# PORT: Server port (default: 5000)
# HOST: Server host binding
#   - Use 0.0.0.0 for VPS/production (accepts external connections)
#   - Use localhost for local development (only local connections)
PORT=5000
HOST=0.0.0.0

# Node Environment
# Set to 'production' for deployment, 'development' for local dev
NODE_ENV=production

# Session Secret
# Generate a strong random string for production
# Example: openssl rand -base64 32
SESSION_SECRET="change-this-to-a-secure-random-string"

# AI Integration (Optional)
# Leave empty if not using AI features
AI_INTEGRATIONS_OPENAI_API_KEY=""
AI_INTEGRATIONS_OPENAI_BASE_URL="https://api.openai.com/v1"
